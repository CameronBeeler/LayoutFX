<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane   fx:controller="sample.Controller"
            xmlns:fx="http://javafx.com/fxml"
            alignment="CENTER" hgap="15" vgap="15">

    <TextField fx:id="nameField" onKeyReleased="#handleKeyReleased" onAction="#onButtonClicked"
               GridPane.rowIndex="0" GridPane.columnIndex="0"/>

    <Button fx:id="OKButton" onAction="#onButtonClicked"
            GridPane.rowIndex="1" GridPane.columnIndex="0"
            text="OK" />

    <Button fx:id="CancelButton" onAction="#onButtonClicked"
            GridPane.rowIndex="5" GridPane.columnIndex="5"
            text="Cancel" />

    <DatePicker fx:id="selectedDate" onAction="#onButtonClicked"
                GridPane.rowIndex="2" GridPane.columnIndex="0"  />

    <CheckBox fx:id="checkBoxClear" onAction="#onButtonClicked"
              GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"
              text="Clear the field after either OK or Cancel" />

    <Label fx:id="threadLabel"
           GridPane.rowIndex="4" GridPane.columnIndex="0"
           text="Thread Tester" />

</GridPane>
